{
	"name": "icanboogie/message-bus",
	"type": "library",
	"description": "A straightforward implementation of a message dispatcher",
	"keywords": [
		"message",
		"dispatcher",
		"bus"
	],
	"homepage": "https://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "https://olvlvl.com/",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/MessageBus/issues",
		"source": "https://github.com/ICanBoogie/MessageBus"
	},
	"config": {
		"sort-packages": true
	},
	"prefer-stable": true,
	"prefer-dist": true,
	"require": {
		"php": ">=7.2.5"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.5",
		"phpunit/phpunit": "^8.5",
		"psr/container": "^1.0",
		"symfony/config": "^4.0|^5.1",
		"symfony/dependency-injection": "^4.0|^5.1",
		"symfony/yaml": "^4.0|^5.1"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\MessageBus\\": "lib/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"ICanBoogie\\MessageBus\\": "tests/"
		}
	}
}
